<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="20dp"
    android:background="@color/white"
    android:layout_marginVertical="20dp"
    android:layout_marginHorizontal="15dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/item_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="@string/post_item_title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_post_date"/>

    <TextView
        android:id="@+id/item_post_date"
        android:layout_width="wrap_content"
        android:textColor="@color/teal_200"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/post_item_date_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_post_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>